# Environment variables for TaskFlow
# Copy this file to .env and customize

# Application
TASKFLOW_APP_NAME=TaskFlow
TASKFLOW_DEBUG=false
TASKFLOW_ENVIRONMENT=production

# Server
TASKFLOW_HOST=0.0.0.0
TASKFLOW_PORT=8000
TASKFLOW_WORKERS=4

# Security
TASKFLOW_SECRET_KEY=change-me-in-production-please!
TASKFLOW_JWT_ALGORITHM=HS256
TASKFLOW_JWT_EXPIRE_MINUTES=1440

# Database
TASKFLOW_DATABASE_URL=postgresql+asyncpg://taskflow:taskflow@localhost:5432/taskflow
TASKFLOW_DATABASE_POOL_SIZE=20
TASKFLOW_DATABASE_POOL_OVERFLOW=10
TASKFLOW_DATABASE_ECHO=false

# Redis
TASKFLOW_REDIS_URL=redis://localhost:6379/0
TASKFLOW_REDIS_POOL_SIZE=10

# Celery
TASKFLOW_CELERY_BROKER_URL=redis://localhost:6379/1
TASKFLOW_CELERY_RESULT_BACKEND=redis://localhost:6379/2
TASKFLOW_CELERY_TASK_ALWAYS_EAGER=false

# Scheduler
TASKFLOW_SCHEDULER_ENABLED=true
TASKFLOW_SCHEDULER_JOB_STORE=redis://localhost:6379/3
TASKFLOW_SCHEDULER_TIMEZONE=UTC

# Logging
TASKFLOW_LOG_LEVEL=INFO
TASKFLOW_LOG_FORMAT=json

# Monitoring
TASKFLOW_METRICS_ENABLED=true
